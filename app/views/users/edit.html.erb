<% provide :title, t(".edit_title") %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="signup-form">
      <h2 class="center-parent"><%= t ".edit_title_h1"%></h2>
      <%= form_for @user do |f| %>
        <%= render "shared/error_messages" %>
        <%= f.text_field :name, placeholder: t(".enter_name"), class: "form-control" %>
        <%= f.email_field :email, placeholder: t(".enter_email"), class: "form-control" %>
        <%= f.password_field :password, class: "form-control" %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
        <%= f.text_field :address, placeholder: t(".enter_address"), class: "form-control" %>
        <%= f.text_field :phone, placeholder: t(".enter_phone"), class: "form-control" %>
        <%= f.submit t(".save"), class: "btn btn-primary" %>
      <% end %>
      <div class="gravatar_edit">
        <%= gravatar_for @user %>
        <%= link_to t(".change"), Settings.link.link_edit, target: :_blank %>
      </div>
    </div>
  </div>
</div>
